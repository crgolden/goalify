<h5>
  <% if current_page?(comment) %>
      <i class="glyphicon glyphicon-search"></i> Show
  <% else %>
      <%= link_to comment do %>
          <i class="glyphicon glyphicon-search"></i> Show
      <% end %>
  <% end %>
  <% if current_page?(edit_comment_path comment) %>
      <% if can? :update, comment %>
          | <i class="glyphicon glyphicon-pencil"></i> Edit
      <% end %>
  <% elsif can? :update, comment %>
      | <%= link_to edit_comment_path(comment) do %>
          <i class="glyphicon glyphicon-pencil"></i> Edit
      <% end %>
  <% end %>
  <% if can? :destroy, comment %>
      | <%= link_to comment, method: :delete, data: {confirm: 'Are you sure?'} do %>
          <i class="glyphicon glyphicon-trash"></i> Delete
      <% end %>
  <% end %>
</h5>
