<%= errors_for subscription %>
<%= form_for(subscription, url: {controller: :subscriptions, action: action}, html: {class: 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :completed, class: 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.check_box :completed, class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
