<%= render layout: 'layouts/panel', locals: {title: 'Viewing Goal'} do %>
    <%= render @goal %>
<% end %>
<% if user_signed_in? %>
    <%= render layout: 'layouts/panel', locals: {title: 'New Goal Comment'} do %>
        <%= render 'comments/new' %>
    <% end %>
<% end %>
<% if @goal.comments.accessible_by(current_ability).present? %>
    <%= render layout: 'layouts/panel', locals: {title: 'Viewing Goal Comments'} do %>
        <%= render 'goals/comments' %>
    <% end %>
<% end %>
