<%= content_for :title, t('goals.title.show') %>
<%= render layout: 'layouts/panel', locals: {title: 'Showing Goal', resource: nil} do %>
    <%= render partial: 'goal', locals: {action: :show, goal: @goal} %>
<% end %>
<%= render layout: 'layouts/panel', locals: {title: 'New Comment', resource: nil} do %>
    <%= render partial: 'comments/form',
               locals: {action: :create, comment: @goal.comments.new, goal: @goal} %>
<% end %>
