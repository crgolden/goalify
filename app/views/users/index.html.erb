<%= content_for :title, t('users.title.index') %>

<% title = 'Users' %>

<%= render layout: 'layouts/jumbotron', locals: {title: title, paginatable: @users} do %>
    <% @users.each do |user| %>
        <%= render layout: 'layouts/row' do %>
            <li class="list-group-item">
              <%= render partial: 'controls', locals: {user: user} %>
              <%= render user, locals: {user: user} %>
            </li>
        <% end %>
        <hr>
    <% end %>
<% end %>
