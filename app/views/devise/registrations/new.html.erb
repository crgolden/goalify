<%= devise_error_messages! %>
<%= content_for :title, t('users.registration.title.new') %>

<% title = 'Sign up' %>

<%= render layout: 'layouts/jumbotron', locals: {title: title, paginatable: nil} do %>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                 html: {role: 'form', class: 'form-horizontal'}) do |f| %>
        <div class="authform">
          <div class="form-group">
            <%= f.label :name, class: 'col-sm-2 control-label' %>
            <div class="col-sm-8">
              <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
            </div>
            <div class="col-sm-2"></div>
          </div>
          <div class="form-group">
            <%= f.label :email, class: 'col-sm-2 control-label' %>
            <div class="col-sm-8">
              <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
            </div>
            <div class="col-sm-2"></div>
          </div>
          <div class="form-group">
            <%= f.label :password, class: 'col-sm-2 control-label' %>
            <div class="col-sm-8">
              <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="col-sm-2"></div>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation, class: 'col-sm-2 control-label' %>
            <div class="col-sm-8">
              <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password' %>
            </div>
            <div class="col-sm-8"></div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-18">
              <%= f.submit 'Sign up', class: 'btn btn-default' %>
            </div>
            <div class="col-sm-2"></div>
          </div>
        </div>
    <% end %>
<% end %>
