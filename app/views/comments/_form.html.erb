<%= errors_for @comment %>
<%= form_for(@comment, html: {class: 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :body, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_area :body, class: 'form-control', placeholder: 'Body' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.submit class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
