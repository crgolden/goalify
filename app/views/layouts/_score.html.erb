<% title = 'Score' %>

<%= render layout: 'layouts/dropdown', locals: {title: title} do %>
    <% if current_page?(score) %>
        <li class="active"><%= link_to 'Show Score', score %></li>
    <% else %>
        <li><%= link_to 'Show Score', score %></li>
    <% end %>
    <li class="divider"></li>
    <li><%= link_to 'Score Goal', score.subscription.goal %></li>
    <li><%= link_to 'Score Goal User', score.subscription.goal.user %></li>
    <li><%= link_to 'Score User', score.subscription.user %></li>
<% end %>
