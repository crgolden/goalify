<%= content_for :title, t('goals.title.edit') %>

<% title = 'Edit Goal' %>

<%= render layout: 'layouts/jumbotron', locals: {title: title, paginatable: nil} do %>
    <%= render layout: 'layouts/row' do %>
        <li class="list-group-item">
          <%= render partial: 'controls', locals: {goal: @goal, subscription: @subscription} %>
        </li>
    <% end %>
    <%= render partial: 'form', locals: {action: :update, goal: @goal} %>
<% end %>
