<%= errors_for @user %>
<%= form_for(@user, url: {action: action}, html: {class: 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'col-sm-4 control-label' %>
      <div class="col-sm-8">
        <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>
    <% if user_signed_in? && current_user.admin? %>
        <div class="form-group">
          <%= f.label :role, class: 'col-sm-4 control-label' %>
          <div class="col-sm-8">
            <%= f.select(:role, User.roles.keys, {}, class: 'form-control') %>
          </div>
        </div>
    <% end %>
    <fieldset>
      <div class="form-group">
        <%= f.label :password, class: 'col-sm-4 control-label' %>
        <div class="col-sm-8">
          <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, class: 'col-sm-4 control-label' %>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password' %>
        </div>
      </div>
    </fieldset>
    <div class="form-group">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.submit class: 'btn btn-default' %>
      </div>
    </div>
<% end %>
