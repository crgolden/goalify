<%= content_for :title, t('comments.title.index') %>

<% if params[:user] %>
    <% title = 'User Comments' %>
<% elsif params[:goal] %>
    <% title = 'Goal Comments' %>
<% else %>
    <% title = 'Comments' %>
<% end %>

<%= render layout: 'layouts/jumbotron', locals: {title: title, paginatable: @comments} do %>
    <% @comments.each do |comment| %>
        <%= render partial: 'controls', locals: {comment: comment} %>
        <%= render comment, locals: {comment: comment} %>
    <% end %>
<% end %>
