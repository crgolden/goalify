<%= content_for :title, t('goals.title.show') %>

<% title = 'Show Goal' %>

<%= render layout: 'layouts/jumbotron', locals: {title: title, paginatable: nil} do %>
    <%= render partial: 'controls', locals: {goal: @goal} %>
    <%= render @goal, locals: {goal: @goal} %>
    <%= render partial: 'items', locals: {goal: @goal} %>
    <%= render partial: 'comments/form', locals: {action: :create, comment: @goal.comments.new, goal: @goal} %>
<% end %>