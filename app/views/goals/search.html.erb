<%= content_for :title, t('goals.title.search') %>

<% if params[:q] %>
    <% title = @results.count.to_s + ' Goals found for "' + params[:q] + '"' %>
<% else %>
    <% title = 'Goals' %>
<% end %>

<%= render layout: 'layouts/jumbotron', locals: {title: title, paginatable: @goals} do %>
    <% @goals.each do |goal| %>
        <%= render partial: 'controls', locals: {goal: goal} %>
        <%= render goal, locals: {goal: goal} %>
    <% end %>
<% end %>
