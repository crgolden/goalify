<%= errors_for comment %>
<%= form_for(comment, url: {controller: :comments, action: action}, html: {class: 'form'}) do |f| %>
    <div class="form-group">
      <%= f.label :comment, class: 'control-label' %>
      <%= f.text_area :body, class: 'form-control', placeholder: 'Body' %>
      <% if comment.goal %>
          <%= f.hidden_field :goal_id, value: comment.goal_id %>
      <% else %>
          <%= f.hidden_field :goal_id, value: comment.goal.id %>
      <% end %>
      <% if comment.user %>
          <%= f.hidden_field :user_id, value: comment.user_id %>
      <% elsif user_signed_in? %>
          <%= f.hidden_field :user_id, value: current_user.id %>
      <% end %>
      <%= f.submit class: 'btn btn-default' %>
    </div>
<% end %>
