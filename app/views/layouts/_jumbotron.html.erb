<div class="jumbotron">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h1><%= title %></h1>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12">
        <%= yield %>
      </div>
    </div>
    <% if paginatable.present? %>
        <div class="row">
          <div class="col-xs-12">
            <%= paginate paginatable %>
          </div>
        </div>
    <% end %>
  </div>
</div>
