<table class="table table-hover">
  <tr class="row">
    <th colspan="3">Completed:</th>
    <% if params[:user_id] %>
        <th>Goal:</th>
    <% elsif params[:goal_id] %>
        <th>User:</th>
    <% end %>
  </tr>
  <% @subscriptions.each do |subscription| %>
      <tr class="row">
        <td><%= subscription.completed? %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription) if can? :update, subscription %></td>
        <td><%= link_to 'Delete', subscription, method: :delete,
                        data: {confirm: 'Are you sure?'} if can? :destroy, subscription %></td>
        <% if params[:user_id] %>
            <td><%= link_to subscription.goal.title, subscription.goal %></td>
        <% elsif params[:goal_id] %>
            <td><%= link_to subscription.user.name, subscription.user %></td>
        <% end %>
      </tr>
  <% end %>
</table>
