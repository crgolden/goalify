<table class="table table-hover">
  <tr class="row">
    <th colspan="3">Body:</th>
    <% if params[:user_id] %>
        <th>Goal:</th>
    <% elsif params[:goal_id] %>
        <th>User:</th>
    <% end %>
  </tr>
  <% @comments.each do |comment| %>
      <tr class="row">
        <td><%= link_to comment.body, comment %></td>
        <td><%= link_to 'Edit', edit_comment_path(comment) if can? :update, comment %></td>
        <td><%= link_to 'Delete', comment, method: :delete,
                        data: {confirm: 'Are you sure?'} if can? :destroy, comment %></td>
        <% if params[:user_id] %>
            <td><%= link_to comment.goal.title, comment.goal %></td>
        <% elsif params[:goal_id] %>
            <td><%= link_to comment.user.name, comment.user %></td>
        <% end %>
      </tr>
  <% end %>
</table>
