<li><%= link_to 'Show Goal', @comment.goal %></li>
<li><%= link_to 'Show User', @comment.user %></li>
<% if current_page?(@comment) %>
    <li class="active"><%= link_to 'Show Comment', @comment %></li>
<% else %>
    <li><%= link_to 'Show Comment', @comment %></li>
<% end %>
<% if can? :update, @comment %>
    <% if current_page?(edit_comment_path @comment) %>
        <li class="active"><%= link_to 'Edit Comment', edit_comment_path(@comment) %></li>
    <% else %>
        <li><%= link_to 'Edit Comment', edit_comment_path(@comment) %></li>
    <% end %>
<% end %>
<% if can? :destroy, @comment %>
    <li><%= link_to 'Delete Comment', @comment, method: :delete,
                    data: {confirm: 'Are you sure?'} %></li>
<% end %>
