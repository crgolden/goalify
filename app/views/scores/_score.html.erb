<% if score.subscription.goal.user.score > 0 %>
    <%= link_to score.subscription.goal.user.score, scores_path(user: score.subscription.goal.user), class: 'badge' %>
<% else %>
    <span class="badge"><%= score.subscription.goal.user.score %></span>
<% end %>
<br>
