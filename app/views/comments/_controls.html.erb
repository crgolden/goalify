<h5><%= link_to 'Show', comment unless current_page?(comment) %></h5>
<% unless current_page?(edit_comment_path(comment)) %>
    <% if can? :update, comment %>
        <h5><%= link_to 'Edit', edit_comment_path(comment) %></h5>
    <% end %>
<% end %>
<% if can? :destroy, comment %>
    <h5><%= link_to 'Delete', comment, method: :delete, data: {confirm: 'Are you sure?'} %></h5>
<% end %>
